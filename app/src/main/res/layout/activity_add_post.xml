<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".AddPost">


    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/img_back"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="40dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxStrokeWidth="2dp"
        app:hintAnimationEnabled="false"
        app:boxStrokeColor="@color/greenTwo"
        app:hintTextColor="@color/greenTwo"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Title"
            android:inputType="text"
            android:maxLines="1"
            android:outlineSpotShadowColor="@color/black"
            android:paddingBottom="18sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textCursorDrawable="@color/greenTwo"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Post Type"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="25sp"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/greenTwo"
        app:hintTextColor="@color/greenTwo"
        >

        <AutoCompleteTextView
            android:id="@+id/postAutoCompleteV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"/>


    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="15dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeWidth="2dp"
                app:hintAnimationEnabled="false"
                app:boxStrokeColor="@color/greenTwo"
                app:hintTextColor="@color/greenTwo"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:hint="Location"
                    android:inputType="text"
                    android:maxLines="1"
                    android:outlineSpotShadowColor="@color/black"
                    android:paddingBottom="18sp"
                    android:singleLine="true"
                    android:textColor="@color/greenTwo"
                    android:textSize="14dp"
                    android:textCursorDrawable="@color/greenTwo"
                    />
            </com.google.android.material.textfield.TextInputLayout>



        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="18dp"
                android:layout_marginBottom="15dp"
                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeWidth="2dp"
                app:hintAnimationEnabled="false"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:hint="Min price"
                    android:inputType="number"
                    android:maxLines="1"
                    android:outlineSpotShadowColor="@color/black"
                    android:paddingBottom="18sp"
                    android:singleLine="true"
                    android:textColor="@color/greenTwo"
                    android:textSize="14dp"
                    />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>




    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="10dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="15dp"
        app:boxCornerRadiusBottomStart="15dp"
        app:boxCornerRadiusTopEnd="15dp"
        app:boxCornerRadiusTopStart="15dp"
        app:boxStrokeWidth="2dp"
        app:hintAnimationEnabled="false"
        app:boxStrokeColor="@color/greenTwo"
        app:hintTextColor="@color/greenTwo"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:lines="6"
            android:outlineSpotShadowColor="@color/black"
            android:paddingBottom="18sp"
            android:singleLine="true"
            android:textColor="@color/greenTwo"
            android:textSize="14dp"
            android:textCursorDrawable="@color/greenTwo"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="25sp">

        <android.widget.Button
            android:id="@+id/addPicBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="12dp"

            android:text="picture"
            android:layout_weight="1"
            android:background="@drawable/post_buttons"
            />
        <android.widget.Button
            android:id="@+id/addFileBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:text="file"
            android:layout_weight="1"
            android:background="@drawable/post_buttons"
            />

    </LinearLayout>

    <android.widget.Button
        android:id="@+id/addPostBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/login_btn_bg"
        android:textColor="@color/white"
        android:text="Post"/>


</LinearLayout>